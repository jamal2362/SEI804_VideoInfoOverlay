<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory android:title="@string/background_options">

        <ListPreference
            android:defaultValue="#000000"
            android:entries="@array/background_color_left_options"
            android:entryValues="@array/background_color_left_values"
            android:icon="@drawable/ic_color_background_left_24dp"
            android:key="background_color_left_key"
            android:summary="@string/background_color_left_summary"
            android:title="@string/background_color_left" />

        <ListPreference
            android:defaultValue="#000000"
            android:entries="@array/background_color_right_options"
            android:entryValues="@array/background_color_right_values"
            android:icon="@drawable/ic_color_background_right_24dp"
            android:key="background_color_right_key"
            android:summary="@string/background_color_right_summary"
            android:title="@string/background_color_right" />

    </PreferenceCategory>
    <PreferenceCategory>

        <ListPreference
            android:defaultValue="0.9"
            android:entries="@array/background_alpha_left_options"
            android:entryValues="@array/background_alpha_left_values"
            android:icon="@drawable/ic_alpha_24dp"
            android:key="background_alpha_left_key"
            android:summary="@string/background_alpha_left_summary"
            android:title="@string/background_alpha_left" />

        <ListPreference
            android:defaultValue="0.9"
            android:entries="@array/background_alpha_right_options"
            android:entryValues="@array/background_alpha_right_values"
            android:icon="@drawable/ic_alpha_24dp"
            android:key="background_alpha_right_key"
            android:summary="@string/background_alpha_right_summary"
            android:title="@string/background_alpha_right" />

    </PreferenceCategory>
</PreferenceScreen>
